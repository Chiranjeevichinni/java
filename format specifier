import java.io.*;
import java.util.*;
class Main

{
    public static void main (String args[]){
        String str = "chiranjeevi";
        System.out.printf("\n the string value is :%s\n",str);
        int x = 512;
        System.out.printf("\n the integer value is :%d\n",x);
        double f=5.264789;
        System.out.printf("\n the float value is :%f\n",f);
        System.out.printf("after formating to specfic width: %8.3f\n",f);
        System.out.printf("after formating to rightmargin in the value is : %10.2f\n",f);
    }
}
